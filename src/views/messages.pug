doctype html
html
    head
        title The Bulletin Board
        link(rel="stylesheet", type="text/css", href="css/style.css")
    body
        .header
            img.logo(src="images/logo.jpg")
            ul.nav
                li
                    a(href="index.pug") Home
                li
                    a(href="messages.pug") Messages
                li
                    a(href="#") contact
                li
                    a(href="#") About Me
        // header
        .display-button
            input.view-messages(type="button", name="viewMessages", value="Click to view all Messages")
        .display-content
            p.content

        script(src='https://ajax.aspnetcdn.com/ajax/jQuery/jquery-3.2.1.min.js')
        script.
            $('.view-messages').click(function(){
            $.get('/viewMessages', function(data){
        
            var content = data.output;
            console.log(data);
            var Content = ""
            for(var i=0; i<content.length;i++){
            Content = Content+`<p>Title:${content[i].title}<br>Message: ${content[i].body}<br> Date: ${content[i].date}</p>`

            }
            $('p').append(Content)
            }) 
            })

